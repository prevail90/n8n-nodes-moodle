{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es2020",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "**/*.spec.ts",
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}
